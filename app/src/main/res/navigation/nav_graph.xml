<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.merabillassignment.screens.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_addPaymentDialog"
            app:destination="@id/addPaymentDialog"
            app:launchSingleTop="true"
            app:popUpTo="@id/homeFragment" />
    </fragment>
    <dialog
        android:id="@+id/addPaymentDialog"
        android:name="com.example.merabillassignment.screens.AddPaymentDialog"
        android:label="fragment_add_payment_dialog"
        tools:layout="@layout/fragment_add_payment_dialog" />
</navigation>